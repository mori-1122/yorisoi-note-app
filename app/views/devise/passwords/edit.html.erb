<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="card shadow p-4 login-card w-100">

    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="text-center mb-4">
      <h2 class="text-pink">パスワード再設定</h2>
      <p>新しいパスワードを設定してください</p>
    </div>

    <%= form_with model: resource, url: password_path(resource_name), method: :put, local: true, data: { turbo: false } do |form| %>
      <%= form.hidden_field :reset_password_token, value: params[:reset_password_token] %>

      <div class="mb-3">
        <%= form.label :password, '新しいパスワード', class: 'form-label' %>
        <%= form.password_field :password, class: 'form-control', required: true, autocomplete: 'new-password' %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, 'パスワード(確認用)', class: 'form-label' %>
        <%= form.password_field :password_confirmation, class: 'form-control', required: true, autocomplete: 'new-password' %>
      </div>

      <div class="d-grid">
        <%= form.submit 'パスワードを変更する', class: "btn btn-pink btn-lg" %>
      </div>
    <% end %>

    <hr class="my-4">

    <div class="text-center">
      <%= link_to 'ログインページに戻る', new_user_session_path, class: "btn btn-outline-secondary w-100" %>
    </div>

  </div>
</div>
