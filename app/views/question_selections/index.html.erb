<%# 戻るボタン %>
<div class="d-flex justify-content-start mb-3">
  <%= link_to visits_path(date: @visit.visit_date),
              class: "btn btn-outline-secondary d-flex align-items-center back-button" do %>
    <i class="bi bi-arrow-left-circle-fill me-2"></i>
    戻る
  <% end %>
</div>

<div class="text-center my-3 text-pink">
  <h1 class="page-title">受診時に聞きたい質問を確認しましょう</h1>
  <small>質問を選んでいない場合は、「選択画面に戻る」ボタンから選んでみましょう。</small>
</div>

<%# 質問をカウントする %>
<div class="question-count text-center mb-4">
  <strong>登録した質問：</strong><%= @total_user_questions %> 件
</div>

<%# フラッシュメッセージのデータ属性 %>
<div id="flash-data"
     data-notice="<%= notice if notice %>"
     data-alert="<%= alert if alert %>"
     class="d-none"></div>

<%# 受診先情報 %>
<% @user_questions.group_by(&:visit).each do |visit, selections| %>
  <%# visit: 各Visitオブジェクト（キー）と、selections: そのvisitに属するQuestionSelection の配列（値） %>
  <% if selections.any? %>
    <div class="visit-group mb-4">
      <h3 class="visit-title">
        <%= visit.visit_date.strftime("%Y年%m月%d日") %><%= visit.hospital_name %>
      </h3>

      <div class="my-questions-card">
        <ul id="<%= dom_id(visit, :question_selections) %>" class="question-list">
          <%= render partial: "question_selections/question_selection",
                     collection: selections,
                     as: :selection %>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>

<%# 遷移するボタン %>
<div class="text-center mt-4">
  <%= link_to "選択画面に戻る",
              select_questions_path(visit_id: @visit.id),
              class: "btn btn-outline-pink" %>
</div>
